.period-hour {
  font-size: 0.7em;
  height: 40rpx;
  width: 21%;
  margin: auto 2%;
  text-align: center;
  border-radius: 10rpx;
  position: relative;
  /* border: solid 1px black; */
}

.hour-title-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events:none;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.hour-title-used {
  color: white;
}

.hour-half {
  float: left;
  width: 50%;
  height: 100%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.hour-half-left {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.hour-half-right {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.hour-half-reserved {
  background-color: #bbb;
}

.hour-half-selected {
  background-color: #789bfe;
}

.wx-loading {
  margin: 0 5px;
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  animation: a 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
  
  @keyframes a {
  0% {
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
  }
  to {
  -webkit-transform: rotate(1turn);
  transform: rotate(1turn);
  }
  }
  