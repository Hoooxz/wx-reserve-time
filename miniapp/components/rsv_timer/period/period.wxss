/* components/rsv_timer/period.wxss */
.periods-container {
  position: relative;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: auto;
  height: auto;
  z-index: 999;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgba(224, 224, 224, 0.8);
  margin: auto 5%;
  /* padding: 5%; */
}

.box {
  margin: 40rpx 5%;
  padding: 5%;
  box-shadow: 0 10rpx 10rpx 0 #e0e0e0
}

.period-line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
}

/* .period-line:last-child view:last-child:after {
